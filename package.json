{
  "name": "exfanest",
  "version": "1.0.0",
  "description": "be learning",
  "license": "ISC",
  "scripts": {
    "ts:watch": "tsc -w",
    "prettier": "npx prettier --write .",
    "prettier:watch": "nodemon scripts/prettier.js",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "express:dev": "concurrently 'npm run prettier:watch' 'env-cmd -f config/.express.dev nodemon express/src/index.ts'",
    "express:prod": "npm run build && env-cmd -f config/.express.prod node dist/express/src/index.js",
    "fastify:dev": "npm run ts:watch & env-cmd -f config/.fastify.dev nodemon dist/fastify/src/index.js",
    "fastify:prod": "npm run build && env-cmd -f config/.fastify.prod node dist/fastify/src/index.js",
    "nest:dev": "cross-env ENV_FILE=.nest.dev nest start --watch",
    "nest:prod": "npm run build && cross-env ENV_FILE=.nest.prod node dist/nest/src/main.js",
    "mock:users": "npm run build && node scripts/fillDBWithUsers.js",
    "mock:products": "npm run build && node scripts/fillDBWithProducts.js"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.2.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mongoose": "^9.0.2",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.2.0",
    "@sinclair/typebox": "^0.24.20",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "env-cmd": "^10.1.0",
    "express": "^4.18.1",
    "express-joi-validation": "^5.0.1",
    "fastify": "^4.3.0",
    "fastify-plugin": "^4.0.0",
    "joi": "^17.6.0",
    "lodash": "^4.17.21",
    "mailgun-js": "^0.22.0",
    "module-alias": "^2.2.2",
    "moment": "^2.29.1",
    "mongoose": "^6.4.6",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.4",
    "swagger-ui-express": "^4.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/hapi__joi": "^17.1.8",
    "@types/jest": "27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.0.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^7.3.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.7.4"
  },
  "_moduleAliases": {
    "@mongo": "dist/mongo"
  }
}
